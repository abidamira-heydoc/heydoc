rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // Chat images (symptom photos, rashes, injuries, etc.)
    match /chat-images/{userId}/{conversationId}/{imageId} {
      // Only the owner can read their chat images
      allow read: if request.auth != null && request.auth.uid == userId;

      // Only the owner can write, with file type and size validation
      allow write: if request.auth != null
                   && request.auth.uid == userId
                   && request.resource.size < 10 * 1024 * 1024  // 10MB max
                   && request.resource.contentType.matches('image/.*');
    }

    // User documents (lab results, prescriptions, medical records, etc.)
    match /users/{userId}/documents/{document=**} {
      // Only the owner can read/write their documents
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Optional: Add file size limit (e.g., 10MB)
      allow write: if request.resource.size < 10 * 1024 * 1024;

      // Optional: Restrict file types
      // allow write: if request.resource.contentType.matches('image/.*')
      //              || request.resource.contentType.matches('application/pdf');
    }

    // User profile images
    match /users/{userId}/profile/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;

      // Restrict to images only, max 5MB
      allow write: if request.resource.contentType.matches('image/.*')
                   && request.resource.size < 5 * 1024 * 1024;
    }

    // Health documents (encrypted) - requires authentication
    match /health/{userId}/documents/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // File size limit: 20MB for medical documents
      allow write: if request.resource.size < 20 * 1024 * 1024;
    }

    // Shared documents (e.g., doctor consultations)
    match /shared/{userId}/{consultId}/{document=**} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Doctor Portal uploads (license and profile photos)
    match /doctors/{doctorId}/{document=**} {
      // Only the doctor can write their own documents
      allow write: if request.auth != null
                   && request.auth.uid == doctorId
                   && request.resource.size < 10 * 1024 * 1024  // 10MB max
                   && request.resource.contentType.matches('image/.*');

      // Anyone authenticated can read (for patient-facing doctor list)
      allow read: if request.auth != null;
    }

    // Deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
